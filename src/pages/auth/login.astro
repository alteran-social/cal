---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Sign In - atproto Cal">
  <main style="max-width: 500px; margin: 4rem auto; padding: 2rem;">
    <div style="background: white; border-radius: 8px; padding: 2rem;">
      <h1 style="margin-bottom: 1.5rem; text-align: center;">Sign In</h1>
      
      <p style="margin-bottom: 2rem; text-align: center; color: #666;">
        Sign in with your AT Protocol handle to get started
      </p>

      <form method="POST" action="/auth/login" style="display: flex; flex-direction: column; gap: 1rem;">
        <div>
          <label for="handle" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">
            Handle
          </label>
          <input
            type="text"
            id="handle"
            name="handle"
            placeholder="user.bsky.social"
            required
            style="width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 4px; font-size: 1rem;"
          />
          <small style="color: #666; margin-top: 0.25rem; display: block;">
            Enter your AT Protocol handle (e.g., user.bsky.social)
          </small>
        </div>

        <button
          type="submit"
          style="background: #0066cc; color: white; padding: 0.75rem; border: none; border-radius: 4px; font-size: 1rem; font-weight: 500; cursor: pointer;"
        >
          Continue
        </button>
      </form>

      <div style="margin-top: 2rem; text-align: center;">
        <a href="/" style="color: #0066cc; text-decoration: none;">
          ‚Üê Back to home
        </a>
      </div>
    </div>
  </main>
</Layout>
